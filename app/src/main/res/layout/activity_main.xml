<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hugo.alberto.ah2foot.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_home"
            android:visibility="gone"/>


        <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:id="@+id/tabelaLayout">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:background="@color/bk_header_tabela"
                android:gravity="center">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_text_tabela"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/classificacao" />

                <TextView
                    android:id="@+id/clube"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Equipe"
                    android:textSize="@dimen/size_text_tabela"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_tabela"
                    android:text="P"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/pontos" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_tabela"
                    android:text="J"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/jogos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_tabela"
                    android:text="E"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/empates" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_tabela"
                    android:text="D"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/derrotas" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_tabela"
                    android:text="S"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/saldo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_tabela"
                    android:text="V"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:id="@+id/vitorias" />
            </LinearLayout>

            <ListView
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation"/>

</LinearLayout>
